<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:background="#53EC7B"
    tools:context=".resources.profesor.RegistrarProfesor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="REGISTRO PROFESOR"
        android:textSize="23dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtVieRegProf_nombre"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Nombres" />

        <EditText
            android:id="@+id/txtEdiRegProf_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_apellido"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="1"

            android:text="Apellidos" />

        <EditText
            android:id="@+id/txtEdiRegProf_apellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_telefono"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Telefono" />

        <EditText
            android:id="@+id/txtEdiRegProf_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_correo"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Correo" />

        <EditText
            android:id="@+id/txtEdiRegProf_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_direccion"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Dirección" />

        <EditText
            android:id="@+id/txtEdiRegProf_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_password"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/txtEdiRegProf_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVieRegProf_dni"
            android:layout_width="100dp"
            android:paddingLeft="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DNI"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/txtEdiRegProf_dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/btnRegProf_agregar"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:enabled="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:backgroundTint="#E7997C"/>

        <Button
            android:id="@+id/btnRegProf_cancelar"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="6dp"
            android:enabled="true"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:backgroundTint="#E7997C"/>

    </LinearLayout>

</LinearLayout>