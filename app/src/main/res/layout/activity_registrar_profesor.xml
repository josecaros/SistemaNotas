<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:background="#53EC7B"
    tools:context=".resources.profesor.RegistrarProfesor"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="REGISTRO PROFESOR"
                android:textSize="30dp"
                android:textColor="#996161" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtVieRegProf_nombre"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:text="Nombres" />

                <EditText
                    android:id="@+id/txtEdiRegProf_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_apellido"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Apellidos" />

                <EditText
                    android:id="@+id/txtEdiRegProf_apellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_telefono"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:layout_weight="1"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/txtEdiRegProf_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="number"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_correo"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:text="Correo" />

                <EditText
                    android:id="@+id/txtEdiRegProf_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="textEmailAddress"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_direccion"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Dirección" />

                <EditText
                    android:id="@+id/txtEdiRegProf_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_password"
                    android:layout_width="120dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:textColor="#996161"
                    android:text="Contraseña" />

                <EditText
                    android:id="@+id/txtEdiRegProf_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="12dp"
                    android:inputType="textPassword"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVieRegProf_dni"
                    android:layout_width="100dp"
                    android:paddingLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DNI"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#996161"/>

                <EditText
                    android:id="@+id/txtEdiRegProf_dni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ems="10"
                    android:layout_marginRight="15dp"
                    android:inputType="number"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegProf_agregar"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:enabled="true"
                    android:text="Registrar"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#E7997C" />

                <Button
                    android:id="@+id/btnRegProf_cancelar"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="6dp"
                    android:enabled="true"
                    android:text="Cancelar"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#E7997C" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_fondoCirca_profesor"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    app:srcCompat="@drawable/img_circa" />

                <TextView
                    android:id="@+id/txtImgCirca_profesor"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:text="CIRCA - Siempre con Dios"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="21dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>