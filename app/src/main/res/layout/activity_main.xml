<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/fondo_main"
    android:paddingLeft="16dp"
    android:scaleType="centerCrop"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:src="@drawable/logocirca"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion Como:"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="#37910d"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/botonLoginDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Director"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            app:backgroundTint=" #067700"
            android:padding="7dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/botonLoginProfesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesor"
            android:textColor="@android:color/white"
            app:backgroundTint="#067700"
            android:padding="7dp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/botonLoginPadre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Padre"
            android:textColor="@android:color/white"
            app:backgroundTint="#067700"
            android:padding="7dp"
            android:layout_margin="10dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Olvidaste tu Contraseña?"
        android:id="@+id/forgotPassword"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#083bcd"
        android:textSize="20dp"/>

</LinearLayout>